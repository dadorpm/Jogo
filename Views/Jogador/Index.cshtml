@model IEnumerable<Jogo.Models.Jogador>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Jogadores</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Jogador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JogadorId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.JogadorId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.JogadorId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
