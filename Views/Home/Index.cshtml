@model IEnumerable<Jogo.Models.Placar>

@{
    ViewData["Title"] = "Ranking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ranking de Jogadores Top 10</h1>

<p>
    <a asp-action="Create" asp-controller="Placar" class="btn btn-success">Cadastre aqui novos Placares</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jogador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Jogador.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pontos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                    
                </tr>
         }

    </tbody>
</table>
