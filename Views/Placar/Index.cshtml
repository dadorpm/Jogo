@model IEnumerable<Jogo.Models.Placar>

@{
    ViewData["Title"] = "Ranking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Placar Geral</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Placar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jogador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pontos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Jogador.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pontos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlacarId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PlacarId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.PlacarId">Exluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
