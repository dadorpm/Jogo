@model Jogo.Models.Placar

@{
    ViewData["Title"] = "Criar Placar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Novo Placar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JogadorId" class="control-label"></label>
                <select asp-for="JogadorId" class ="form-control" asp-items="ViewBag.JogadorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pontos" class="control-label"></label>
                <input asp-for="Pontos" class="form-control" />
                <span asp-validation-for="Pontos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Data" type="hidden" class="form-control" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
